{
  "name": "@turbocoder13/bulma-turbo-themes",
  "version": "0.3.0",
  "description": "Bulma theme packs and an accessible theme selector.",
  "license": "MIT",
  "type": "module",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TurboCoder13/bulma-turbo-themes.git"
  },
  "bugs": {
    "url": "https://github.com/TurboCoder13/bulma-turbo-themes/issues"
  },
  "homepage": "https://turbocoder13.github.io/bulma-turbo-themes/",
  "author": "Turbo Coder",
  "keywords": [
    "bulma",
    "theme",
    "css",
    "design-system",
    "accessibility"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "assets/css/themes/*.css"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:dev": "./build.sh --dev",
    "build:prod": "./build.sh --prod",
    "test": "vitest run --coverage",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "mdlint": "markdownlint '**/*.md' --ignore node_modules",
    "stylelint": "stylelint '**/*.css' --ignore-path .stylelintignore",
    "coverage:badges": "node scripts/ci/coverage-badges.mjs",
    "css:budget": "node scripts/ci/css-budget.mjs",
    "theme:sync": "node scripts/sync-catppuccin.mjs",
    "ci": "./scripts/local/build.sh",
    "ci:quick": "./scripts/local/build.sh --quick",
    "ci:full": "./scripts/local/build.sh --full",
    "ci:docker": "bash ./scripts/local/ci-docker.sh",
    "ci:docker:full": "bash ./scripts/local/ci-docker.sh --full",
    "prepare": "[ -z \"$npm_config_omit\" ] && husky || true",
    "prepublishOnly": "npm run build && npm test"
  },
  "lint-staged": {
    "*.{json,md,yml,yaml,css,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@catppuccin/palette": "^1.0.0",
    "markdownlint-cli": "^0.45.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^39.0.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "happy-dom": "^20.0.2",
    "husky": "^9.0.0",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.3.3",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
