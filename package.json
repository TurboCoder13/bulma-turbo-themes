{
  "name": "@turbocoder13/bulma-turbo-themes",
  "version": "0.10.1",
  "description": "Bulma theme packs and an accessible theme selector.",
  "license": "MIT",
  "type": "module",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TurboCoder13/bulma-turbo-themes.git"
  },
  "bugs": {
    "url": "https://github.com/TurboCoder13/bulma-turbo-themes/issues"
  },
  "homepage": "https://turbocoder13.github.io/bulma-turbo-themes/",
  "author": "Turbo Coder",
  "keywords": [
    "bulma",
    "theme",
    "css",
    "design-system",
    "accessibility",
    "design-tokens",
    "react-native",
    "cross-platform"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./tokens": {
      "types": "./dist/tokens/index.d.ts",
      "import": "./dist/tokens/index.js"
    },
    "./tokens/react-native": {
      "types": "./dist/tokens/react-native/index.d.ts",
      "import": "./dist/tokens/react-native/index.js"
    },
    "./tokens.json": "./dist/tokens.json",
    "./css/*": "./assets/css/themes/*"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "assets/css/themes/*.css"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json && node scripts/generate-tokens-json.mjs",
    "build:css": "vite build --mode css",
    "build:themes": "node scripts/generate-themes-sass.mjs && node scripts/build-themes.mjs",
    "build:js": "bunx esbuild assets/js/theme-selector.js --minify --outfile=assets/js/theme-selector.min.js --target=es2020",
    "build:dev": "./scripts/local/build.sh --dev",
    "build:prod": "./scripts/local/build.sh --prod",
    "serve": "bun run build && bun run build:themes && bundle exec jekyll serve --livereload --incremental",
    "build:ci:jekyll": "./scripts/ci/build-jekyll.sh",
    "build:gem": "./scripts/build-gem.sh",
    "build:all": "bun run build && bun run build:gem",
    "test": "vitest run --coverage",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "format": "uv run lintro check",
    "format:write": "uv run lintro fmt",
    "mdlint": "markdownlint '**/*.md' --ignore node_modules --ignore-path .markdownlintignore",
    "stylelint": "stylelint '**/*.css' --ignore-path .stylelintignore",
    "coverage:badges": "node scripts/ci/coverage-badges.mjs",
    "css:budget": "node scripts/ci/css-budget.mjs",
    "theme:sync": "node scripts/sync-catppuccin.mjs",
    "e2e:prep": "bun run build && bun run build:themes && bundle exec jekyll build --config _config.yml",
    "e2e:start": "node scripts/e2e-serve.mjs",
    "e2e": "playwright test",
    "e2e:ci": "playwright test",
    "e2e:install": "playwright install chromium",
    "e2e:install:all": "playwright install",
    "e2e:smoke": "playwright test --grep @smoke",
    "e2e:visual": "playwright test --grep @visual",
    "e2e:a11y": "playwright test --grep @a11y",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "ci": "./scripts/local/build.sh",
    "ci:quick": "./scripts/local/build.sh --quick",
    "ci:full": "./scripts/local/build.sh --full",
    "ci:docker": "bash ./scripts/local/ci-docker.sh",
    "ci:docker:full": "bash ./scripts/local/ci-docker.sh --full",
    "test:workflows": "./scripts/local/test-workflows-act.sh",
    "test:workflows:quick": "./scripts/local/test-workflows-act.sh --quick",
    "test:workflows:single": "./scripts/local/test-workflows-act.sh --single",
    "prepare": "[ -z \"$npm_config_omit\" ] && husky || true",
    "prepublishOnly": "bun run build && bun run build:themes && bun run test"
  },
  "lint-staged": {
    "*.{json,md,yml,yaml,css,html}": [
      "uv run lintro fmt"
    ]
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-native": ">=0.70.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-native": {
      "optional": true
    }
  },
  "devDependencies": {
    "react": "^18.3.1",
    "@types/react": "^18.3.12",
    "@testing-library/react": "^16.0.1",
    "react-dom": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@axe-core/playwright": "^4.11.0",
    "@catppuccin/palette": "^1.7.1",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@playwright/test": "^1.56.1",
    "@primer/primitives": "^11.3.1",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/coverage-v8": "^4.0.8",
    "bulma": "^1.0.4",
    "cssnano": "^7.1.2",
    "eslint": "^9.39.1",
    "happy-dom": "^20.0.10",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "lightningcss": "^1.30.2",
    "lint-staged": "^16.2.6",
    "markdownlint-cli": "^0.45.0",
    "sass": "^1.94.0",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.8"
  }
}
