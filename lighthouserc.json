{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:4000",
        "http://localhost:4000/components/",
        "http://localhost:4000/forms/",
        "http://localhost:4000/es/introduccion/"
      ],
      "startServerCommand": "bundle exec jekyll serve --port 4000 --config _config.yml --detach",
      "startServerReadyPattern": "Server address:",
      "startServerReadyTimeout": 30000
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.75 }],
        "categories:accessibility": ["warn", { "minScore": 0.7 }],
        "categories:best-practices": ["warn", { "minScore": 0.75 }],
        "categories:seo": ["warn", { "minScore": 0.8 }]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./lighthouse-reports"
    }
  }
}
