{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noConsoleLog": "off",
        "noGlobalIsNan": "off",
        "noExplicitAny": "off",
        "noImplicitAnyLet": "off"
      },
      "style": {
        "noUnusedTemplateLiteral": "off",
        "useConst": "error",
        "useNodejsImportProtocol": "off",
        "noNonNullAssertion": "off",
        "noUselessElse": "off",
        "useTemplate": "off",
        "useSingleVarDeclarator": "off"
      },
      "complexity": {
        "noForEach": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 88
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "es5"
    }
  },
  "files": {
    "include": [
      "src/**/*.ts",
      "test/**/*.ts",
      "e2e/**/*.ts",
      "assets/js/**/*.ts",
      "scripts/**/*.mjs"
    ],
    "ignore": [
      "dist/",
      "_site/",
      "node_modules/",
      "vendor/",
      ".venv/",
      "coverage/",
      "playwright-report/",
      "test-results/",
      "lighthouse-reports/",
      "*.min.js"
    ]
  }
}
