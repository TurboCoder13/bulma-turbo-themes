{
  "$schema": "../turbo-themes.schema.json#/$defs/SharedTokensFile",
  "$description": "Shared layout tokens for all themes - spacing, elevation, animation, opacity",
  "spacing": {
    "xs": { "$value": "0.25rem", "$type": "dimension" },
    "sm": { "$value": "0.5rem", "$type": "dimension" },
    "md": { "$value": "1rem", "$type": "dimension" },
    "lg": { "$value": "1.5rem", "$type": "dimension" },
    "xl": { "$value": "2rem", "$type": "dimension" }
  },
  "elevation": {
    "none": { "$value": "none", "$type": "shadow" },
    "sm": { "$value": "0 1px 2px 0 rgba(0, 0, 0, 0.05)", "$type": "shadow" },
    "md": {
      "$value": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "$type": "shadow"
    },
    "lg": {
      "$value": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "$type": "shadow"
    },
    "xl": {
      "$value": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
      "$type": "shadow"
    }
  },
  "animation": {
    "durationFast": { "$value": "150ms", "$type": "duration" },
    "durationNormal": { "$value": "300ms", "$type": "duration" },
    "durationSlow": { "$value": "500ms", "$type": "duration" },
    "easingDefault": {
      "$value": "cubic-bezier(0.4, 0, 0.2, 1)",
      "$type": "cubicBezier"
    },
    "easingEmphasized": {
      "$value": "cubic-bezier(0.05, 0.7, 0.1, 1)",
      "$type": "cubicBezier"
    }
  },
  "opacity": {
    "disabled": { "$value": 0.5, "$type": "number" },
    "hover": { "$value": 0.8, "$type": "number" },
    "pressed": { "$value": 0.6, "$type": "number" }
  }
}
