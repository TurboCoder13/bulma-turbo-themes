      },
      "easingEmphasized": {
        "$value": "cubic-bezier(0.05, 0.7, 0.1, 1)",
        "$type": "cubicBezier"
      }
    },
    "opacity": {
      "disabled": {
        "$value": 0.5,
        "$type": "number"
      },
      "hover": {
        "$value": 0.8,
        "$type": "number"
      },
      "pressed": {
        "$value": 0.6,
        "$type": "number"
      }
    },
