---
/**
 * Collapsible sidebar navigation for documentation pages.
 * Uses the component sidebar structure from turbo-themes.
 */
import { getCollection } from 'astro:content';

interface Props {
  currentSlug: string;
}

const { currentSlug } = Astro.props;

const allDocs = await getCollection('docs', ({ data }) => !data.draft);

const categories = [
  { key: 'getting-started', label: 'Getting Started', icon: 'zap' },
  { key: 'installation', label: 'Installation', icon: 'download' },
  { key: 'integrations', label: 'Integrations', icon: 'grid' },
  { key: 'api-reference', label: 'API Reference', icon: 'book' },
  { key: 'guides', label: 'Guides', icon: 'bookmark' },
  { key: 'contributing', label: 'Contributing', icon: 'users' },
];

const groupedDocs = categories.map(cat => ({
  ...cat,
  docs: allDocs
    .filter(doc => doc.data.category === cat.key && doc.data.sidebar !== false)
    .sort((a, b) => a.data.order - b.data.order),
})).filter(cat => cat.docs.length > 0);
---

<aside class="sidebar docs-sidebar" id="docs-sidebar" data-state="expanded">
  <div class="sidebar-header">
    <a href="/" class="sidebar-logo">
      <span class="sidebar-logo-icon">âœ¦</span>
      <span class="sidebar-logo-text">Turbo Themes</span>
    </a>
    <button class="sidebar-trigger" id="docs-sidebar-collapse" type="button" aria-label="Collapse sidebar" aria-expanded="true">
      <svg class="sidebar-trigger-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 17l-5-5 5-5"/><path d="M18 17l-5-5 5-5"/></svg>
    </button>
  </div>

  <div class="sidebar-content">
    {groupedDocs.map(category => {
      const isActive = category.docs.some(d => d.slug === currentSlug || currentSlug.startsWith(category.key));
      return (
        <div class="sidebar-group">
          <ul class="sidebar-menu">
            <li class="sidebar-menu-item" data-open={isActive ? 'true' : 'false'}>
              <button class="sidebar-menu-button" type="button" aria-expanded={isActive ? 'true' : 'false'}>
                <svg class="sidebar-menu-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  {category.icon === 'zap' && <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>}
                  {category.icon === 'download' && <><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></>}
                  {category.icon === 'grid' && <><rect x="3" y="3" width="7" height="7"/><rect x="14" y="3" width="7" height="7"/><rect x="14" y="14" width="7" height="7"/><rect x="3" y="14" width="7" height="7"/></>}
                  {category.icon === 'book' && <><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/></>}
                  {category.icon === 'bookmark' && <><path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"/></>}
                  {category.icon === 'users' && <><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></>}
                </svg>
                <span class="sidebar-menu-text">{category.label}</span>
                <svg class="sidebar-menu-chevron" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M6 9l6 6 6-6"/></svg>
              </button>
              <div class="sidebar-menu-sub">
                {category.docs.map(doc => (
                  <a
                    href={`/docs/${doc.slug}/`}
                    class={`sidebar-menu-sub-button ${doc.slug === currentSlug ? 'active' : ''}`}
                    aria-current={doc.slug === currentSlug ? 'page' : undefined}
                  >
                    {doc.data.title}
                  </a>
                ))}
              </div>
            </li>
          </ul>
        </div>
      );
    })}
  </div>

  <div class="sidebar-footer">
    <a href="https://github.com/TurboCoder13/turbo-themes" class="sidebar-menu-button" target="_blank" rel="noopener">
      <svg class="sidebar-menu-icon" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
      <span class="sidebar-menu-text">GitHub</span>
    </a>
  </div>
</aside>

<script is:inline>
(function() {
  const sidebar = document.getElementById('docs-sidebar');
  const collapseBtn = document.getElementById('docs-sidebar-collapse');
  const COLLAPSED_KEY = 'docs-sidebar-collapsed';

  // Restore collapsed state
  if (localStorage.getItem(COLLAPSED_KEY) === 'true') {
    sidebar.setAttribute('data-state', 'collapsed');
    collapseBtn?.setAttribute('aria-expanded', 'false');
  }

  // Toggle collapse
  collapseBtn?.addEventListener('click', function() {
    const isCollapsed = sidebar.getAttribute('data-state') === 'collapsed';
    sidebar.setAttribute('data-state', isCollapsed ? 'expanded' : 'collapsed');
    collapseBtn.setAttribute('aria-expanded', isCollapsed ? 'true' : 'false');
    localStorage.setItem(COLLAPSED_KEY, isCollapsed ? 'false' : 'true');
  });

  // Toggle groups
  document.querySelectorAll('.docs-sidebar .sidebar-menu-button[aria-expanded]').forEach(function(btn) {
    btn.addEventListener('click', function(e) {
      e.preventDefault();
      const menuItem = btn.closest('.sidebar-menu-item');
      if (!menuItem) return;
      const isOpen = menuItem.getAttribute('data-open') === 'true';
      menuItem.setAttribute('data-open', !isOpen);
      btn.setAttribute('aria-expanded', !isOpen);
    });
  });
})();
</script>
