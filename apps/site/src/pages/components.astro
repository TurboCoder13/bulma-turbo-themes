  <script is:inline>
    (function() {
      var tabs = document.querySelectorAll('.component-tab');
      var panels = document.querySelectorAll('.component-panel');

      function activateTab(tabId) {
        var targetTab = document.getElementById('tab-' + tabId);
        var targetPanel = document.getElementById('panel-' + tabId);

        if (!targetTab || !targetPanel) return;

        // Deactivate all tabs and panels
        tabs.forEach(function(tab) {
          tab.classList.remove('active');
          tab.setAttribute('aria-selected', 'false');
          tab.setAttribute('tabindex', '-1');
        });
        panels.forEach(function(panel) {
          panel.classList.remove('active');
        });

        // Activate the target tab and panel
        targetTab.classList.add('active');
        targetTab.setAttribute('aria-selected', 'true');
        targetTab.setAttribute('tabindex', '0');
        targetPanel.classList.add('active');

        // Update URL hash without scrolling
        history.replaceState(null, '', '#' + tabId);
      }

      // Handle tab clicks
      tabs.forEach(function(tab) {
        tab.addEventListener('click', function() {
          var tabId = this.id.replace('tab-', '');
          activateTab(tabId);
        });
      });

      // Handle keyboard navigation
      tabs.forEach(function(tab, index) {
        tab.addEventListener('keydown', function(e) {
          var targetTab = null;

          if (e.key === 'ArrowRight') {
            targetTab = tabs[index + 1] || tabs[0];
          } else if (e.key === 'ArrowLeft') {
            targetTab = tabs[index - 1] || tabs[tabs.length - 1];
          } else if (e.key === 'Home') {
            targetTab = tabs[0];
          } else if (e.key === 'End') {
            targetTab = tabs[tabs.length - 1];
          }

          if (targetTab) {
            e.preventDefault();
            var tabId = targetTab.id.replace('tab-', '');
            activateTab(tabId);
            targetTab.focus();
          }
        });
      });

      // Handle initial hash on page load
      function handleHash() {
        var hash = window.location.hash.slice(1);
        if (hash && document.getElementById('tab-' + hash)) {
          activateTab(hash);
        }
      }

      handleHash();
      window.addEventListener('hashchange', handleHash);

      // Demo tabs functionality (for the Tabs component demo)
      var demoTabs = document.querySelectorAll('[data-demo-tab]');
      var demoPanels = document.querySelectorAll('[data-demo-panel]');

      demoTabs.forEach(function(tab) {
        tab.addEventListener('click', function() {
          var targetPanel = this.getAttribute('data-demo-tab');

          demoTabs.forEach(function(t) { t.classList.remove('active'); });
          demoPanels.forEach(function(p) { p.classList.remove('active'); });

          this.classList.add('active');
          var panel = document.querySelector('[data-demo-panel="' + targetPanel + '"]');
          if (panel) panel.classList.add('active');
        });
      });

      // Sidebar demo toggle functionality
      var sidebarTriggers = document.querySelectorAll('.sidebar-demo .sidebar-trigger');
      sidebarTriggers.forEach(function(trigger) {
        trigger.addEventListener('click', function() {
          var sidebar = this.closest('.sidebar');
          if (!sidebar) return;

          var currentState = sidebar.getAttribute('data-state');
          var newState = currentState === 'collapsed' ? 'expanded' : 'collapsed';
          sidebar.setAttribute('data-state', newState);

          // Update aria-expanded on trigger
          this.setAttribute('aria-expanded', newState === 'expanded' ? 'true' : 'false');
        });
      });

      // Sidebar sub-menu toggle functionality
      var sidebarMenuButtons = document.querySelectorAll('.sidebar-demo .sidebar-menu-button[aria-expanded]');
      sidebarMenuButtons.forEach(function(button) {
        button.addEventListener('click', function(e) {
          e.preventDefault();
          var menuItem = this.closest('.sidebar-menu-item');
          if (!menuItem) return;

          var isOpen = menuItem.getAttribute('data-open') === 'true';
          menuItem.setAttribute('data-open', isOpen ? 'false' : 'true');
          this.setAttribute('aria-expanded', isOpen ? 'false' : 'true');
        });
      });
    })();
  </script>
